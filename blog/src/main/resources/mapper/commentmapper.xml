<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.blog.mapper.CommentMapper">
    
    <!--추천 사용자 정보 등록-->
    <insert id="createComment" parameterType="com.spring.blog.vo.CommentVO">
		INSERT INTO comment (user_id, post_id, comment, comment_date, delete_yn, delete_date)
		VALUES (#{userId}, #{postId}, #{comment}, #{commentDate}, #{deleteYn}, #{deleteDate})
	</insert>

	<!--댓글 조회-->
    <resultMap id="commentResultMap" type="CommentVO">
	    <id property="id" column="id" />
	    <result property="userId" column="user_id" />
	    <result property="postId" column="post_id" />
	    <result property="comment" column="comment" />
	    <result property="commentDate" column="comment_date" />
	    <result property="deleteDate" column="delete_date" />
	    <result property="deleteYn" column="delete_yn" />
	</resultMap>

    <select id="findById" resultMap="commentResultMap" parameterType="java.lang.Long">
		SELECT 
			*
		FROM 
			comment
		WHERE
			delete_yn = 'N'
		AND
			post_id = #{id}
		ORDER BY
			comment_date ASC
    </select>
    
    <!-- 포스트 삭제 -->
	<delete id="deleteComment" parameterType="com.spring.blog.vo.CommentVO">
		UPDATE comment
	    SET 
	    	delete_yn = #{deleteYn}, 
	    	delete_date = #{deleteDate}
	    WHERE id = #{id}
    </delete>

</mapper>